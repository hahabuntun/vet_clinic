                <link rel="stylesheet" href="../../static/css/doctor_appointments_booking.css">
                <li><a href="#">Выход</a></li>
            </ul>
        </nav>
    </header>
    <h1>Расписание записей к врачу</h1>

    <div class="filter-container">
        <!-- Фильтры по дате и времени -->
        <label for="date-filter">Фильтр по дате:</label>
        <input type="date" id="date-filter">
        <button onclick="applyFilters()">Поиск записей</button>

    </div>

    <div id="schedule">
        <!-- Расписание будет отображаться здесь -->
    </div>

    <script>
        // Mock data for schedule entries
        const scheduleEntries = [
            { time: "09:00", name: "Иванов", isReserved: true },
            { time: "10:30", name: "", isReserved: false },
            { time: "12:00", name: "Петров", isReserved: true },
            { time: "14:30", name: "", isReserved: false }
        ];

        // Function to display schedule
        function displaySchedule() {
            const scheduleContainer = document.getElementById("schedule");
            scheduleContainer.innerHTML = "";

            scheduleEntries.forEach(entry => {
                const entryElement = document.createElement("div");
                entryElement.classList.add("schedule-entry");
                entryElement.innerHTML = `
                    <p>Время: ${entry.time}</p>
                    <p>${entry.isReserved ? `Записан: ${entry.name}` : "Свободно"}</p>
                `;
                scheduleContainer.appendChild(entryElement);
            });
        }

        // Run displaySchedule initially
        displaySchedule();
    </script>
</body>
