<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список приемов</title>
    <link rel="stylesheet" href="/stylesc/css/doctor_appointments_booking.css">
    <link rel="stylesheet" href="/styles/css/basic_nav.css">
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav>
            <ul>
                <li><a href="view_appointments.html">Приемы</a></li>
                <li><a href="animal_card.html">Поиск животного</a></li>
                <li><a href="booking_schedule.html">Расписание записей</a></li>
                <li><a href="#">Выход</a></li>
            </ul>
        </nav>
    </header>

    <div class="filter-container">
        <!-- Фильтры по дате и времени -->
        <label for="date-filter">Фильтр по дате:</label>
        <input type="date" id="date-filter">
        <label for="pet-filt">Фильтр по питомцу:</label>
        <select id="pet-filt">
            <option value="pet1">Pet 1</option>
            <option value="pet2">Pet 2</option>
        </select>
        <label for="status-filt">Статус:</label>
        <select id="status-filt">
            <option value="finished">Завершен</option>
            <option value="current">Текущий</option>
        </select>
        <button onclick="applyFilters()">Поиск записей</button>

    </div>

    <div class="appointments">
        <!-- Список приемов будет появляться здесь -->
    </div>

    <script>
                // Mock data for appointments
        const appointments = [
            { time: "10:00", clientNumber: "12345", animalName: "Барсик", animalNickname: "Пушистик", status: "завершен" },
            { time: "11:30", clientNumber: "54321", animalName: "Рекс", animalNickname: "Бобик", status: "производится в данный момент" }
        ];

        // Function to display appointments
        function displayAppointments() {
            const appointmentsContainer = document.querySelector(".appointments");
            appointmentsContainer.innerHTML = "";

            appointments.forEach(appointment => {
                const appointmentElement = document.createElement("div");
                appointmentElement.classList.add("appointment");
                appointmentElement.innerHTML = `
                    <p>Время: ${appointment.time}</p>
                    <p>Номер клиента: ${appointment.clientNumber}</p>
                    <p>Животное: ${appointment.animalName} (${appointment.animalNickname})</p>
                    <p>Статус приема: ${appointment.status}</p>
                    <a href="single_appointment.html">Просмотр приема</a>
                `;
                appointmentsContainer.appendChild(appointmentElement);
            });
        }

        // Run displayAppointments initially
        displayAppointments();

        // Event listener for filter change
        document.getElementById("filterSelect").addEventListener("change", function() {
            // Code to filter appointments based on selected criteria can be added here
        });

    </script>
</body>
</html>